<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('partials/head') %>
</head>

<body>
    <%- include('partials/header') %>

        <div class="shadow-lg p-3 mb-5 bg-white rounded titulo">Detalle del producto</div>

        <div class="card mb-3" style="max-width: 70%;">
            <div class="row no-gutters detalle">
                <div class="col-lg-4 col-md-4">
                    <img src="/images/<%= producto.imagenes %>" class="card-img" alt="...">
                </div>
                <div class="col-lg-8 col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%- producto.nombre %>
                        </h5>

                        <p>
                            <%= producto.descripcion %>
                        </p>

                        <p class="card-text"><small class="precio">$<%= producto.precio %> </small></p>

                        <input type="number" name="" id="cantidad" value="0"><br><br>                        
                        
                        <% if (typeof user == 'undefined' ) {%> 
                            <form action="/cart/agregar" method="post">
                        <div class="botones">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-cart-arrow-down"></i> Agragar al carrito</button>
                        </div>
                          </form>
                    <% }else if (user.rol == 'administrador') { %> 
                        <form action="/cart/agregar/<%= usuario.id %>" method="post">
                            <div class="botones">
                                <button type="submit" class="btn btn-primary"><i class="fas fa-cart-arrow-down"></i> Agragar al carrito</button>
                            </div>
                              </form>
                        <form action="/products/delete/<%= producto.id %>?_method=DELETE " method="POST">
                            <button type="submit" class="btn btn-danger"> Eliminar</button>
                        </form>
                        <a href="/products/<%= producto.id %>/edit" class="btn btn-info"> Editar</a>
                    <% } else {%>
                        
                        <form action="/cart/agregar/<%= producto.id %>" method="post">
                            <div class="botones">
                                <button type="submit" class="btn btn-primary"><i class="fas fa-cart-arrow-down"></i> Agragar al carrito</button>
                            </div>
                              </form>    
                    <% } %> 

                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/footer') %>
</body>

</html>