<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

    <body>

        <%- include('partials/header') %>
<br>
        <div class="shadow-lg p-3 mb-5 bg-white rounded titulo">Editar Producto</div> 
        <div class="container">
            <section class="addProduct">
                <div class="row productos">
                    <div class="col-12">
                        <div class="contenido text-left">
                            <div class="row">
                                <div class="col-12 col-md-7 col-xl-8 formulario">
                                  <div class="">
                                            <h5 class="mb-3">Datos del Producto</h5>
                                            <form action="/products/<%= producto.id %> /edit?_method=PUT " method="POST" enctype="multipart/form-data">
                                                <div class="form-group">
                                                    <label for="exampleFormControlInput1">Categoría</label>
                                                    <input type="text" class="form-control" id="exampleFormControlInput1" value="<%= producto.categoria %> " name="categoria" disabled>
                                                </div>
                                                <div class="form-group">
                                                    <label for="exampleFormControlInput1">Titulo de la publicación</label>
                                                    <input value="<%= producto.nombre %> " type="text" class="form-control <%= (typeof old != 'undefined' && old.nombre)?"is-valid":(typeof errors != 'undefined' && errors.nombre)?"is-invalid": ""  %>" value="<%= (typeof old != 'undefined' && old.nombre)?old.nombre:'' %>" id="nombre" placeholder="" name="nombre">
                                                    <small class="text-danger"><%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "" %> </small>
                                                    <div class="nombre invalid-feedback" id="errorNombre"></div>
                                                </div>

                                                <div class="form-row">
                                                    <div class="col">
                                                        <label for="">Precio</label>
                                                        <input value="<%= Number(producto.precio) %>" type="number" class="form-control <%= (typeof old != 'undefined' && old.precio)?"is-valid":(typeof errors != 'undefined' && errors.precio)?"is-invalid": ""  %>" value="<%= (typeof old != 'undefined' && old.precio)?old.nombre:'' %>" id="precio" placeholder="" name="precio">
                                                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.precio)?errors.precio.msg: "" %> </small>
                                                    <div class="precio invalid-feedback" id="errorPrecio"></div>
                                                    </div>
                                                </div>
                                                <div class="form-group mt-3">
                                                    <label for="exampleFormControlTextarea1">Descripción</label>
                                                    <textarea  rows="3" name="descripcion" id="descripcion" class="form-control <%= (typeof old != 'undefined' && old.descripcion)?"is-valid":(typeof errors != 'undefined' && errors.descripcion)?"is-invalid": ""  %>" value="<%= (typeof old != 'undefined' && old.precio)?old.descripcion:'' %>"> <%= producto.descripcion %> </textarea>
                                                    <small class="text-danger"><%= (typeof errors != 'undefined' && errors.descripcion)?errors.descripcion.msg: "" %> </small>
                                                    <div class="descripcion invalid-feedback" id="errorDescripcion"></div>
                                                </div>
                                                <div class="form-group mt-3">
                                                    <label for="">Elija una imagen</label>
                                                    <input value="<%= producto.imagen %> " type="file"  name='imagen' id="imagen" class="form-control <%= (typeof old != 'undefined' && old.imagen)?"is-valid":(typeof errors != 'undefined' && errors.imagen)?"is-invalid": ""  %>" value="<%= (typeof old != 'undefined' && old.imagen)?old.imagen:'' %>">
                                                    <small class="text-danger"><%= (typeof errors != 'undefined' && errors.imagen)?errors.imagen.msg: "" %> </small>
                                                    <div class="imagen invalid-feedback" id="errorImagen"></div>
                                                </div>
                                                <div class="mt-5 mr-5 d-flex justify-content-end">
                                                    <button type="reset" class="btn btn-secondary mr-3">Borrar</button>
                                                    <button type="submit" class="btn btn-primary" >Publicar</button>
                                                </div>
                                            </form>
                                        </div>
                       
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

       <%- include('partials/footer') %>
       <script src="/scripts/updateProductValidatorFront.js"></script>

    </body>

</html>