                                                    <div class="media container col-lg-6">
                                                        <img src="<%- producto.imagen %>" class="align-self-center mr-3" alt="...">
                                                        <div class="media-body">
                                                            <a href="/products/detail/<%= producto.id %>">
                                                                <h5 class="mt-0">
                                                                    <%- producto.nombre %>
                                                                </h5>
                                                            </a>
                                                            <p class="mb-0">
                                                                <%- producto.descripcion %>
                                                            </p>

                                                        </div>
                                                    </div>
                                                    <% } %>
                                                        <% }) %>

                                                            <div class="shadow-lg p-5  col-lg-6 rounded titulo-comida" id="postre">Postres</div>

                                                            <% productos.forEach(producto => { %>
                                                                <% if(producto.categoria == 'postre') {%>
