                                        <div class="media-body">
                                            <a href="/products/detail/<%= producto.id %>">
                                                <h5 class="mt-0">
                                                    <%- producto.nombre %>
                                                </h5>
                                            </a>
                                            <p class="mb-0">
                                                <%- producto.descripcion %>
                                            </p>

                                        </div>
                                    </div>
                                    <% } %>
                                        <% }) %>

                                            <div class="shadow-lg p-5 col-lg-6 rounded titulo-comida" id="hamburguesa">Hamburguesas</div>

                                            <% productos.forEach(producto => { %>
