<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>



    <body>

        <%- include('partials/header') %>
            <!--CARRITO-->
            <div class="sticky-top bg-dark"><a href="/products/cart" class="carrito"><i class="fas fa-cart-arrow-down mr-4 c-success"></i></a></div>

            <!--NAV DE MENU-->
            <div class="shadow-lg  bg-white p-3 rounded titulo">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a href="#pasta"><button type="button" class="btn btn-dark mx-3 ">Pasta</button></a>
                    <a href="#pizza"><button type="button" class="btn btn-dark mx-3 ">pizzas</button></a>
                    <a href="#hamburguesa"><button type="button" class="btn btn-dark mx-3">hamburguesa</button></a>
                    <a href="#postre"><button type="button" class="btn btn-dark mx-3">Postres</button></a>
                    <a href="#bebida"><button type="button" class="btn btn-dark mx-3">Bebidas</button></a>
                </div>

            </div>

            </div>
            <!--CATALOGO-->
            <div class="shadow-md p-5 col-sm-4 col-md-12 col-lg-6  rounded titulo-comida" id="pasta">Pastas</div>

            <% productos.forEach(producto => { %>
                <% if(producto.categoria == 'pastas') {%>
                    <div class="media container col-lg-6">
                        <img src="<%- producto.imagen %>" class="align-self-center mr-3" alt="...">
                        <div class="media-body">
                            <a href="/products/detail/<%= producto.id %>">
                                <h5 class="mt-0">
                                    <%- producto.nombre %>
                                </h5>
                            </a>
                            <p class="mb-0">
                                <%- producto.descripcion %>
                            </p>

                        </div>
                    </div>
                    <% } %>
                        <% }) %>

                            <div class="shadow-lg p-5  col-lg-6 rounded titulo-comida" id="pizza">Pizzas</div>

                            <% productos.forEach(producto => { %>
