<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %> 
<body>
  <%- include('partials/header') %> 

     <form action="/users/register" method="POST" enctype="multipart/form-data" class="container">
        <div class="row">
          <div class="row col-lg-6 col-md-6 col-9 formulario">
           <h1>Registrarse</h1>             
            <label for="nombre">nombre</label>  
           <input type="text" name="nombre" class="form-control <%= (typeof old != 'undefined' && old.nombre)?"is-valid":(typeof errors != 'undefined' && errors.nombre)?"is-invalid": ""  %>" value="<%= (typeof old != 'undefined' && old.nombre)?old.nombre:'' %>">   
           <small class="text-danger"><%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "" %> </small>

           <label for="apellido">apellido</label>  
           <input type="text" name="apellido" class="form-control <%= (typeof old != 'undefined' && old.apellido)?"is-valid":(typeof errors != 'undefined' && errors.apellido)?"is-invalid": ""  %>" value="<%= (typeof old != 'undefined' && old.apellido)?old.apellido:'' %>">   
           <small class="text-danger"><%= (typeof errors != 'undefined' && errors.apellido)?errors.apellido.msg: "" %> </small>

           <label for="email">Email</label> 
           <input type="email" name="email" id="" class="form-control <%= (typeof old != 'undefined' && old.email && !errors.email)?"is-valid":(typeof errors != 'undefined' && errors.email)?"is-invalid": ""  %>" value="<%= (typeof old != 'undefined' && old.email)?old.email:'' %>">
           <small class="text-danger"><%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "" %> </small>




           <label for="contraseña">Contraseña</label>
           <input type="password" name="contraseña" id="" class="form-control <%= (typeof errors != 'undefined' && errors.contraseña)?"is-invalid": ""  %>"> 
           <small class="text-danger"><%= (typeof errors != 'undefined' && errors.contraseña)?errors.contraseña.msg: "" %> </small>

           
           
           <label for="contraseña2">Repetir Contraseña</label>
           <input type="password" name="contraseña2" id="" class="form-control <%= (typeof errors != 'undefined' && errors.contraseña2)?"is-invalid": ""  %>">
           <small class="text-danger"><%= (typeof errors != 'undefined' && errors.contraseña2)?errors.contraseña2.msg: "" %> </small>
 
           
           
           <label for="avatar">Elija una imagen</label>
           <input type="file" class="form-control" name='avatar'>
           <small class="text-danger"><%= (typeof errorFormato != 'undefined')?errorFormato: "" %> </small>
          
           <div>
            <button type="submit" class="btn btn-primary">Registrarse</button>
            <button type="reset" class="btn btn-danger">Cancelar</button>
           </div>            
          </div>
        </div>
     </form> 
     
     <%- include('partials/footer') %> 

</body>
</html>